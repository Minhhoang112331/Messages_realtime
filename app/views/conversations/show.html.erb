<div class="container">
  <div id ="msg" %>
    <%= render "messages/messages", messages: @messages %>
  </div>

  <%= form_for @message, remote: true do |f| %>
    <%= f.text_area :content, id: "content" %>
    <%= f.hidden_field :conversation_id, value: params[:id] %>
    <%= f.submit "Send" %>
  <% end %>
</div>
