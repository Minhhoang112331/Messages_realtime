<div class="container">
  <div class="row">
    <div>
      <h3> List users </h3>
      <ul>
        <% @users.each do |user| %>
          <% next if user.id == current_user.id %>
          <li><%= user.user_name %></li>

          <%= form_for :conversation do |f| %>
            <%= f.hidden_field :receiver_id, value: user.id %>
            <%= f.submit "Message" %>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</div>
